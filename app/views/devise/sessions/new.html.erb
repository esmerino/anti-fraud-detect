<h2><%= t('devise.log_in')%></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
  wrapper_mappings: {}) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                label: t('devise.password'),
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: t('devise.remember_me'), as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions d-grid text-center mt-2">
    <%= f.button :submit, t('devise.log_in') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
