<!-- ========== Left Sidebar Start ========== -->
<div class="left-side-menu">

    <!-- LOGO -->
    <div class="logo-box">
      <%= link_to root_path, class: "logo logo-dark text-center", data: { turbo: false } do %>
        <span class="logo-sm">
          <img src="<%= image_url('logo-sm-dark.png') %>" alt="" height="24">
          <!-- <span class="logo-lg-text-light">Minton</span> -->
        </span>
        <span class="logo-lg">
          <img src="<%= image_url('logo-dark.png') %>" alt="" height="20">
          <!-- <span class="logo-lg-text-light">M</span> -->
        </span>
      <% end -%>

      <%= link_to root_path, class: "logo logo-light text-center", data: { turbo: false } do %>
        <span class="logo-sm">
          <img src="<%= image_url('logo-sm.png') %>" alt="" height="24">
        </span>
        <span class="logo-lg">
          <img src="<%= image_url('logo-sm.png') %>" alt="" height="20">
        </span>
      <% end -%>
    </div>

    <div class="h-100" data-simplebar>

        <!--- Sidemenu -->
        <div id="sidebar-menu">

            <ul id="side-menu">

                <li>
                    <%= link_to anti_frauds_path, data: { turbo: false } do %>
                      <i class="mdi mdi-api"></i>
                      <span> API ANTI-FRAUD</span>
                    <% end -%>
                </li>

                <li>
                    <%= link_to transactions_path, data: { turbo: false } do %>
                      <i class="mdi mdi-cash-usd-outline"></i>
                      <span> TRANSACTIONS </span>
                    <% end -%>
                </li>

                <li>
                    <%= link_to faqs_path, data: { turbo: false } do %>
                      <i class="mdi mdi-account-question-outline"></i>
                      <span> F.A.Q </span>
                    <% end -%>
                </li>

            </ul>

        </div>
        <!-- End Sidebar -->

        <div class="clearfix"></div>

    </div>
    <!-- Sidebar -left -->

</div>
<!-- Left Sidebar End -->